<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.project.e_quisioner.admin.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/userrr"
            app:civ_border_color="@color/colorbar"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            android:layout_gravity="center"
            android:id="@+id/imageProfile"
            app:civ_shadow_color="#8BC34A"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-22dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/nameText"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Dwi Romadon"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <View
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="3dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="dwiramadhan250@gmail.com"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/emailText" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/idText" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/lvl" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2">
    <View
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:background="@color/colorbar"
        android:layout_height="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:columnOrderPreserved="false"
        android:layout_gravity="center"
        android:useDefaultMargins="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/btn_submit_rounded">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="90dp"
                android:id="@+id/btnBuatMateri"
                android:src="@drawable/jadinih"
                android:layout_gravity="center"
                android:background="@color/style_color_accent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Buat Materi Baru"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/btn_submit_rounded_pink">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btn1"
                android:layout_gravity="center"
                android:src="@drawable/datauser"
                android:background="@drawable/btn_submit_rounded_pink" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Data User"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="118dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/btn_submit_rounded_red">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="90dp"
                android:id="@+id/btn3"
                android:src="@drawable/imgnya"
                android:layout_gravity="center"
                android:background="@color/btn_context_menu_text_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Edit Materi"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="12dp"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="118dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/btn_submit_rounded_green">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btn4"
                android:layout_gravity="center"
                android:background="@drawable/btn_submit_rounded_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Testing"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textColor="@color/white" />
        </LinearLayout>
    </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true">
        <View
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:background="@color/colorbar"
            android:layout_height="5dp" />
    </LinearLayout>
</RelativeLayout>